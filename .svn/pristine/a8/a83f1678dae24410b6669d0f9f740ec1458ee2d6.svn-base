<?xml version="1.0" encoding="ISO-8859-1" ?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:p="http://primefaces.org/ui"
	xmlns:sec="http://www.springframework.org/security/facelets/tags"
	xmlns:ui="http://java.sun.com/jsf/facelets">
<ui:composition template="/templates/principal.xhtml">
	<ui:define name="corpo">
		<h:form id="formulario" class="form-horizontal">

			<!-- GRID e POPUPS -->

			<h:outputStylesheet library="plugins" name="w2ui/w2ui-1.3.2.css" />
			<h:outputScript library="plugins" name="w2ui/w2ui-1.3.2.js" />

			<div class="row">
				<div class="bs-example bs-example-tabs">
					<ul id="myTab" class="nav nav-tabs">
						<li><a href="#{request.contextPath}/restrito/pessoa/consultaMensagens.jsf">Histórico
								de Mensagens</a></li>
						<li class="active"><a href="#">Enviar Mensagem</a></li>
					</ul>
				</div>
			</div>
	<br></br>
	
			<p:messages id="cadMenssagem" display="text" autoUpdate="true"
				closable="true" errorClass="bs-callout bs-callout-info" />

			<br />

			<div class="row">

				<label class="col-xs-2 control-label labelRenovar">Selecione
					o Funcionário</label>
				<div class="col-xs-2">
					<div class="form-group">

						<h:selectOneMenu id="funcionario" class="form-control input-sm"
							value="#{mensagemFuncionarioBean.funcionario.funId}" required="true"
							requiredMessage="Selecione o funcionário"
							disabled="#{contratoLocacaoBean.alteracao}">
							<f:selectItem itemLabel="Selecione o Funcionário..."
								noSelectionOption="true" />
							<f:selectItems value="#{mensagemFuncionarioBean.listaFuncionarios}"
								var="sta" itemValue="#{sta.funId}"
								itemLabel="#{sta.pessoa.pesNome}" />
						</h:selectOneMenu>

					</div>
				</div>

			</div>

			<div class="row">

			<label class="control-label">Mensagem</label>

			<p:inputTextarea id="textoMensagem" class="autosize form-control" rows="5"
				cols="100" maxlength="150" counter="counterAcerto" 
				counterTemplate="{0} caracteres restantes"
				value="#{mensagemFuncionarioBean.mensagem.menFunMensagem}"
				style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 125px;" />

			<h:outputText id="vazioAcerto" />

			<div style="text-align: right; padding-top: 20px;">
				<h:outputText id="counterAcerto" />
			</div>

		</div>

			<hr />

			<div class="row" style="text-align: center">

				<div class="btn-group">

					<p:commandButton value="Enviar"
						action="#{mensagemFuncionarioBean.salvar()}"
						class="btn btn-default btn-lg" update="@form" />

					<p:commandButton class="btn btn-default btn-lg" value="Limpar"
						onclick="javascript: window.location.assign('cadastro.jsf');" />
				</div>

			</div>

		</h:form>

	</ui:define>
</ui:composition>
</html>