<?xml version="1.0" encoding="ISO-8859-1" ?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:p="http://primefaces.org/ui"
	xmlns:sec="http://www.springframework.org/security/facelets/tags"
	xmlns:ui="http://java.sun.com/jsf/facelets">
<ui:composition template="/templates/principal.xhtml">
	<ui:define name="corpo">
		<h:form id="formulario" class="form-horizontal">
			
			<h3>Destinação de Locação</h3>
			
			<div class="row">
				<div class="bs-example bs-example-tabs">
					<ul id="myTab" class="nav nav-tabs">
						<li><a href="consulta.jsf">CONSULTA</a></li>
						<li class="active"><a href="#">CADASTRO</a></li>
					</ul>
				</div>
			</div>

			<p:messages id="cadMenssagem" display="text" autoUpdate="true" closable="true" errorClass="bs-callout bs-callout-info" />
					
			<br/>
			
			<div class="row">
			
				<label class="col-md-2 control-label labelRenovar">CÓDIGO</label>
			
				<div class="col-md-2 form-group">
					<h:inputText id="id" class="form-control input-sm"
						value="#{destinacaoLocacaoBean.destinacaoLocacao.desLocId}" disabled="true" />
				</div>
				
			</div>
			
			<div class="row">
			
				<label class="col-md-2 control-label labelRenovar">NOME</label>

				<div class="col-md-3 form-group">
					<h:inputText id="nome" class="form-control input-sm"
						value="#{destinacaoLocacaoBean.destinacaoLocacao.desLocNome}"
						size="35" maxlength="60" required="true"
						requiredMessage="Destinação de Locação não foi preenchido." />
				</div>

				<!-- SEGURO -->
				<label class="col-xs-1 control-label labelRenovar">SEGURO</label>

				<div class="col-xs-2">
					<div class="form-group">

						<h:selectOneMenu id="seguro" class="form-control input-sm"
							value="#{destinacaoLocacaoBean.destinacaoLocacao.desLocSeguro}"
							required="true" requiredMessage="Selecione Seguro">
							<f:selectItem itemLabel="Selecione..." itemValue=""/>
							<f:selectItem itemValue="Passível de Seguro"
								itemLabel="Passível de Seguro" />
							<f:selectItem itemValue="Não Possui Seguro"
								itemLabel="Não Possui Seguro" />
						</h:selectOneMenu>

					</div>
				</div>

			</div>
						
			<hr />
			
			<div class="row" style="text-align: center">

				<div class="btn-group">

					<p:commandButton value="Salvar"
						action="#{destinacaoLocacaoBean.salvar}" 
						class="btn btn-default btn-lg" />
						
					<p:commandButton class="btn btn-default btn-lg" value="Limpar" 
						onclick="javascript: window.location.assign('cadastro.jsf');"/>
						
					<p:commandButton class="btn btn-default btn-lg" value="Excluir" 
						onclick="javascript: window.location.assign('excluir.jsf?id=#{destinacaoLocacaoBean.destinacaoLocacao.desLocId}');"/>
						
				</div>

			</div>
			
		</h:form>
		
	</ui:define>
</ui:composition>
</html>