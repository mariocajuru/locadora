<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:p="http://primefaces.org/ui"
	xmlns:pe="http://primefaces.org/ui/extensions"
	xmlns:ui="http://java.sun.com/jsf/facelets">


		<h:outputStylesheet library="plugins" name="w2ui/w2ui-1.3.2.css" />
		<h:outputScript library="plugins" name="w2ui/w2ui-1.3.2.js" />

		
		<div id="grid" style="width: 100%; height: 100%; min-height: 500px; max-height: 1000px; overflow: hidden;"></div>

		<script type="text/javascript">
		$(function () {
			$('#grid').w2grid({ 
				name: 'grid', 
				header: 'BAIRROS',
				show: {
					header 		: false,
					toolbar 	: true,
					footer		: false,
					lineNumbers	: true,
					selectColumn: false,
					expandColumn: false
				},
				columns: [
					 { field: 'nomeFun',      caption: 'Nome Fucionario',      size: '110px', sortable: true, resizable: true },
				    { field: 'data', caption: 'Data', size: '150px', sortable: true, resizable: true },
				    { field: 'loguin',  caption: 'Loguin', size: '80px',  sortable: true, resizable: true },
				    { field: 'ip',     caption: 'IP MAQUINA',    size: '100px',  sortable: true, resizable: true },
				    { field: 'nome_maquina',     caption: 'NOME MAQUINA',    size: '190px',  sortable: true, resizable: true },
				    { field: 'recid',     caption: 'Código',    size: '60px',  sortable: true, resizable: true },					   
				    { field: 'item',      caption: 'Item',      size: '180px', sortable: true, resizable: true },
				    { field: 'nome_item', caption: 'Nome do Item', size: '110px', sortable: true, resizable: true },
				    { field: 'tipo',  caption: 'TIPO', size: '120px',  sortable: true, resizable: true },
				],
				searches: [
					{ type: 'int',   field: 'recid', caption: 'Código' },
					{ type: 'text',  field: 'nomeFun', caption: 'Nome Fucionario' },
					{ type: 'text',  field: 'data', caption: 'Data' },
					{ type: 'text',  field: 'loguin', caption: 'Loguin' },
					{ type: 'text',   field: 'ip', caption: 'IP MAQUINA' },
					{ type: 'text',   field: 'nome_maquina', caption: 'NOME MAQUINA' },
					{ type: 'text',  field: 'item', caption: 'Item' },
					{ type: 'text',  field: 'nome_item', caption: 'Nome do Item' },
					{ type: 'text',  field: 'tipo', caption: 'TIPO' },
				],
				records: [
							
					<ui:repeat value="#{auditoriaBean.listaAuditorias}" var="pes">
						{ 
							recid:      #{pes.id_item}, 
							nomeFun:      '#{pes.nomeFun}', 
							data: '#{pes.data}',
							loguin:     '#{pes.loguin}',
							ip:      '#{pes.ip}', 
							item:      '#{pes.item}', 
							nome_item: '#{pes.nome_item}',
							tipo:     '#{pes.tipo}',
							nome_maquina:     '#{pes.nome_maquina}',
						 },
					</ui:repeat>
						
				]
			});	
		});
		</script>
</ui:composition>